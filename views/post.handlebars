<div class="text-center" id="single-post">
  {{#if logged_in}}
    <h2>{{post.title}}</h2>
    <p>{{post.body}}</p>
    <p>Created by {{post.user.username}}</p>
  </div>
  <div id="add-comment">
    <h3>Add a new comment!</h3>
<div>
<form class="comment-form">
    <label for="comment">Comment</label>
    <input class="form-input" type="text" id="comment" name="comment" />
    <button type="submit">Submit</button>
</form>
</div>
</div>
  {{else}}
  <a href="/login"><button>Login to see Blogs</button></a>
  {{/if}}  
